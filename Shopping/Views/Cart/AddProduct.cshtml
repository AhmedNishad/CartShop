@model Shopping.Entities.Product
@{
    ViewData["Title"] = "AddProduct";
}

<h1>AddProduct</h1>

<a asp-action="ViewProducts">Back to Products</a>

<form class="form-group" action="" method="post">
    <div class="form-control">
        <lable asp-for="@Model.ProductName">Product Name</lable>
        <input type="text" asp-for="@Model.ProductName" />
        <span class="text-danger" asp-validation-for="@Model.ProductName"></span>
    </div>
    <div class="form-control">
        <lable asp-for="@Model.UnitPrice">Unit Price</lable>
        <input type="text" asp-for="@Model.UnitPrice" />
        <span class="text-danger" asp-validation-for="@Model.UnitPrice"></span>
    </div>
    <div class="form-control">
        <lable asp-for="@Model.QuantityAtHand">Quantity at Hand</lable>
        <input type="text" asp-for="@Model.QuantityAtHand" />
        <span class="text-danger" asp-validation-for="@Model.QuantityAtHand"></span>
     </div>
    <div class="form-control">
        <input class="btn btn-primary" type="submit" />
    </div>
</form>